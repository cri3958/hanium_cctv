<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:alertDialogTheme">@style/MyAlertDialogStyle</item>
    </style>

    <style name="Theme.Dark" parent="Theme.AppCompat.Light.NoActionBar"> <!--출처 :https://jabstorage.tistory.com/31-->
        <item name="android:statusBarColor" tools:targetApi="21">@color/textview</item> <!--Status Bar의 배경색-->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item> <!--Status Bar 아이콘의 색상 true:검은 아이콘, false:흰 아이콘-->

        <item name="toolbarStyle">@style/ToolbarStyle.Dark</item> <!--Toolbar 스타일-->
        <item name="actionMenuTextColor">@color/text</item> <!--액션 메뉴의 텍스트 색상-->
        <item name="colorControlNormal">@color/icon</item> <!--홈/뒤로가기 버튼의 색상-->
    </style>

    <!--Toolbar 스타일-->
    <style name="ToolbarStyle.Dark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item> <!-- Toolbar의 배경색-->
        <item name="titleTextAppearance">@style/ToolbarTitleStyle.Dark</item> <!-- Toolbar의 타이틀 텍스트-->
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleStyle.Dark</item> <!-- Toolbar의 서브타이틀 텍스트-->
    </style>

    <!-- Toolbar의 타이틀 텍스트-->
    <style name="ToolbarTitleStyle.Dark" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/text</item> <!-- Toolbar의 타이틀 텍스트 색상-->
        <item name="android:textSize">25dp</item> <!-- Toolbar의 타이틀 텍스트 사이즈-->

    </style>

    <!-- Toolbar의 서브타이틀 텍스트-->
    <style name="ToolbarSubtitleStyle.Dark" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/text</item> <!-- Toolbar의 서브타이틀 텍스트 색상-->
        <item name="android:textSize">12dp</item> <!-- Toolbar의 서브타이틀 텍스트 사이즈-->
    </style>

    <style name="Theme.Checkcctv" parent="Theme.AppCompat.Light.NoActionBar"> <!--출처 :https://jabstorage.tistory.com/31-->
        <item name="android:statusBarColor" tools:targetApi="21">@color/textview</item> <!--Status Bar의 배경색-->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item> <!--Status Bar 아이콘의 색상 true:검은 아이콘, false:흰 아이콘-->

        <item name="toolbarStyle">@style/ToolbarStyle.Checkcctv</item> <!--Toolbar 스타일-->
        <item name="actionMenuTextColor">@color/text</item> <!--액션 메뉴의 텍스트 색상-->
        <item name="colorControlNormal">@color/icon</item> <!--홈/뒤로가기 버튼의 색상-->
    </style>

    <!--Toolbar 스타일-->
    <style name="ToolbarStyle.Checkcctv" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item> <!-- Toolbar의 배경색-->
        <item name="titleTextAppearance">@style/ToolbarTitleStyle.Checkcctv</item> <!-- Toolbar의 타이틀 텍스트-->
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleStyle.Checkcctv</item> <!-- Toolbar의 서브타이틀 텍스트-->
    </style>

    <!-- Toolbar의 타이틀 텍스트-->
    <style name="ToolbarTitleStyle.Checkcctv" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/text</item> <!-- Toolbar의 타이틀 텍스트 색상-->
        <item name="android:textSize">18dp</item> <!-- Toolbar의 타이틀 텍스트 사이즈-->

    </style>

    <!-- Toolbar의 서브타이틀 텍스트-->
    <style name="ToolbarSubtitleStyle.Checkcctv" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/text</item> <!-- Toolbar의 서브타이틀 텍스트 색상-->
        <item name="android:textSize">12dp</item> <!-- Toolbar의 서브타이틀 텍스트 사이즈-->
    </style>

    <!--AlertDialog의 스타일-->
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowLightStatusBar">false</item> <!--Status Bar 아이콘의 색상 true:검은 아이콘, false:흰 아이콘-->
        <item name="colorAccent">@color/text</item>
        <item name="android:background">@color/textview</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/montserratextralight</item>
    </style>

</resources>