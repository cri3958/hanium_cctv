<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".others.MainActivity"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/main_textlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HELLO  "
            android:fontFamily="@font/montserratextralight"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테스트"
            android:fontFamily="@font/montserratextralight"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/main_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!!"
            android:fontFamily="@font/montserratextralight"
            android:textColor="@color/text"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/main_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/btn_cctv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/main_center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/edge_circle_black" />

    <ImageView
        android:id="@+id/main_image_cctv"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/btn_cctv"
        android:layout_alignTop="@id/btn_cctv"
        android:layout_alignBottom="@id/btn_cctv"
        android:layout_marginStart="20dp"
        android:alpha="0.1"
        app:srcCompat="@drawable/ic_action_computer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn_cctv"
        android:layout_alignBottom="@+id/btn_cctv"
        android:layout_toEndOf="@id/main_image_cctv"
        android:layout_alignEnd="@id/btn_cctv"
        android:gravity="center"
        android:text="CCTV"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btn_record"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/main_center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/edge_circle_black" />

    <ImageView
        android:id="@+id/main_image_record"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_record"
        android:layout_alignTop="@id/btn_record"
        android:layout_alignBottom="@id/btn_record"
        android:layout_marginStart="20dp"
        android:alpha="0.1"
        app:srcCompat="@drawable/ic_calendar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn_record"
        android:layout_alignBottom="@+id/btn_record"
        android:layout_toEndOf="@+id/main_image_record"
        android:layout_alignEnd="@id/btn_record"
        android:gravity="center"
        android:text="RECORD"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btn_setting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_setting" />
</RelativeLayout>