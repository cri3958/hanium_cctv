<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cctv.CctvActivity"
    android:background="@color/background"
    style="@style/Theme.Dark">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cctv_toolbar">

        <ListView
            android:id="@+id/listview_cctvlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:src="@drawable/ic_action_computer"
        app:layout_constraintTop_toBottomOf="@id/cctv_toolbar" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_cctvlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/background"
        android:src="@drawable/ic_action_add"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/cctv_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/underbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Theme.Dark"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cctv_action_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_delete"
        android:scaleType="fitCenter"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/cctv_toolbar"
        app:layout_constraintBottom_toBottomOf="@id/cctv_toolbar"
        app:layout_constraintEnd_toEndOf="@id/cctv_toolbar"/>


</androidx.constraintlayout.widget.ConstraintLayout>